@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Employees</h2>
    <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
        <i class="bi bi-plus-lg"></i> Add Employee
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Position</th>
                    <th>Salary</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Position</td>
                        <td>@employee.Salary.ToString("C")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning me-1">
                                Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info me-1">
                                View
                            </a>
                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>