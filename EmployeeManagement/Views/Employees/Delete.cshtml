@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Delete Employee</h4>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this employee?</h5>
        <dl class="row mt-3">
            <dt class="col-sm-4">FirstName:</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">LastName:</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Position:</dt>
            <dd class="col-sm-8">@Model.Position</dd>

            <dt class="col-sm-4">Salary:</dt>
            <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3-fill"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

